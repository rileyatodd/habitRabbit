extends layout

block content
  form#addHabitForm
    div.col-xs-12.col-md-4
      input.form-control#inputHabitName(type='text', placeholder='New Habit Name')
    div.col-xs-4.col-md-2.col-md-offset-1
      select.form-control#goodOrNo
        option(value='true')
          |Good Habit
        option(value='')
          |Bad Habit
    div.col-xs-6.col-md-4#frequencyAndPeriod
      div.col-xs-4.col-xs-offset-1
        input.form-control#frequency(type='number', placeholder=1, value=1)
      div.col-xs-1
        div#perSlash /
      div.col-xs-6
        select.form-control#period
          option(value='day') Day
          option(value='week') Week
          option(value='month') Month
    div.col-xs-1.pull-right
      button#addHabitButton.btn.pull-right
        |Add
  table#habitTable.table.table-striped
    thead
      td Habit
      td Reinforce
      td Recent Periods
      td
    tbody