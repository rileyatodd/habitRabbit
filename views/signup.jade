extends layout

block content
  div.row
    div.col-md-3
    div.col-md-6
      h1.
        Pick a username and password
    div.col-md-3
  div.row
    div.col-md-3
    div.col-md-6
      form(action='/signup', method='post')
        label Username:
        input(type='text', name='username')
        label Password:
        input(type='password', name='password')
        input(type='submit')
    div.col-md-3